<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/light_black"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.view.AddDeviceActivity">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete all the fields"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundColor="@color/lighter_black"
                        app:hintTextColor="@color/white"
                        android:textColorHint="@color/white"
                        android:layout_marginBottom="10dp"
                        android:hint="Add Device Name">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDeviceName"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundColor="@color/lighter_black"
                        app:hintTextColor="@color/white"
                        android:textColorHint="@color/white"
                        android:layout_marginBottom="10dp"
                        android:hint="Add Humidity Name">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etHumName"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundColor="@color/lighter_black"
                        app:hintTextColor="@color/white"
                        android:textColorHint="@color/white"
                        android:layout_marginBottom="10dp"
                        android:hint="Add Temperature Name">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTempName"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundColor="@color/lighter_black"
                        app:hintTextColor="@color/white"
                        android:textColorHint="@color/white"
                        android:layout_marginBottom="10dp"
                        android:hint="Add voltmeter Name">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etVoltName"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundColor="@color/lighter_black"
                        app:hintTextColor="@color/white"
                        android:textColorHint="@color/white"

                        android:hint="Add Switcher Name">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etSwitchName"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="20dp"
                        android:layout_weight="60">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Line and shadow color"
                                android:gravity="center"/>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="5dp"
                                android:layout_marginTop="7dp"
                                app:cardBackgroundColor="@color/lighter_black">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/lnColorSelectedTop"
                                        android:layout_width="match_parent"
                                        android:layout_height="10dp"
                                        android:background="@color/lighter_black"
                                        android:orientation="horizontal" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="10dp">

                                        <com.google.android.flexbox.FlexboxLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            app:justifyContent="space_evenly">


                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/ln_color1"
                                                android:layout_width="25dp"
                                                android:layout_height="25dp"
                                                app:cardCornerRadius="25dp"
                                                app:cardBackgroundColor="@color/blue"
                                                app:cardElevation="5dp" />



                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/ln_color2"
                                                android:layout_width="25dp"
                                                android:layout_height="25dp"
                                                app:cardBackgroundColor="@color/purple"
                                                app:cardCornerRadius="50dp"
                                                app:cardElevation="5dp"/>

                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/ln_color3"
                                                android:layout_width="25dp"
                                                android:layout_height="25dp"
                                                app:cardBackgroundColor="@color/pink"
                                                app:cardCornerRadius="50dp"
                                                app:cardElevation="5dp"/>

                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/ln_color4"
                                                android:layout_width="25dp"
                                                android:layout_height="25dp"
                                                app:cardBackgroundColor="@color/peach"
                                                app:cardCornerRadius="50dp"
                                                app:cardElevation="5dp"/>

                                        </com.google.android.flexbox.FlexboxLayout>



                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginBottom="10dp"
                                        android:layout_marginTop="10dp">

                                        <com.google.android.flexbox.FlexboxLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            app:justifyContent="space_evenly">

                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/ln_color5"
                                                android:layout_width="25dp"
                                                android:layout_height="25dp"
                                                app:cardBackgroundColor="@color/orange"
                                                app:cardCornerRadius="50dp"
                                                app:cardElevation="5dp"/>

                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/ln_color6"
                                                android:layout_width="25dp"
                                                android:layout_height="25dp"
                                                app:cardBackgroundColor="@color/gold"
                                                app:cardCornerRadius="50dp"
                                                app:cardElevation="5dp"/>

                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/ln_color7"
                                                android:layout_width="25dp"
                                                android:layout_height="25dp"
                                                app:cardCornerRadius="50dp"
                                                app:cardBackgroundColor="@color/neon_purple"
                                                app:cardElevation="5dp"/>

                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/ln_color8"
                                                android:layout_width="25dp"
                                                android:layout_height="25dp"
                                                app:cardCornerRadius="50dp"
                                                app:cardBackgroundColor="@color/green"
                                                app:cardElevation="5dp"/>

                                        </com.google.android.flexbox.FlexboxLayout>



                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="40"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Text color"
                                android:gravity="center"/>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="5dp"
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginTop="7dp"
                                app:cardBackgroundColor="@color/lighter_black">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/txColorSelectedTop"
                                        android:layout_width="match_parent"
                                        android:layout_height="10dp"
                                        android:background="@color/lighter_black"
                                        android:orientation="horizontal" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="10dp">

                                        <com.google.android.flexbox.FlexboxLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            app:justifyContent="space_evenly">

                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/tx_color1"
                                                android:layout_width="25dp"
                                                android:layout_height="25dp"
                                                app:cardCornerRadius="50dp"
                                                app:cardBackgroundColor="@color/white"
                                                app:cardElevation="5dp"/>

                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/tx_color2"
                                                android:layout_width="25dp"
                                                android:layout_height="25dp"
                                                app:cardBackgroundColor="@color/pink"
                                                app:cardCornerRadius="50dp"
                                                app:cardElevation="5dp"/>

                                        </com.google.android.flexbox.FlexboxLayout>



                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp">

                                        <com.google.android.flexbox.FlexboxLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            app:justifyContent="space_evenly">

                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/tx_color3"
                                                android:layout_width="25dp"
                                                android:layout_height="25dp"
                                                app:cardBackgroundColor="@color/green"
                                                app:cardCornerRadius="50dp"
                                                app:cardElevation="5dp"/>

                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/tx_color4"
                                                android:layout_width="25dp"
                                                android:layout_height="25dp"
                                                app:cardCornerRadius="50dp"
                                                app:cardBackgroundColor="@color/gold"
                                                app:cardElevation="5dp"/>

                                        </com.google.android.flexbox.FlexboxLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



        </androidx.core.widget.NestedScrollView>

    </LinearLayout>






    <LinearLayout
        android:id="@+id/addNewDeviceSubOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addNewDevice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/lighter_black"
            android:layout_marginVertical="10dp"

            app:icon="@drawable/ic_baseline_add_24"
            app:iconPadding="-20dp"
            app:iconSize="40dp"
            app:iconTint="@color/gold"
            android:visibility="visible"
            android:gravity="center"
            android:text="ADD NEW DEVICE"/>



    </LinearLayout>


</LinearLayout>